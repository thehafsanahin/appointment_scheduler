<div class="row prescription-new">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row well prescription-body">
      <div class="col-sm-12">
        <% @prescription.problems.each do |problem| %>
            <div class="form-group">
              <div class="row">
                <div class="col-sm-3">
                  <b>Problem Name:</b>
                </div>
                <div class="col-sm-9">
                  <%= problem.name %>
                </div>
              </div>
              <div class="row mt20">
                <div class="col-sm-3">
                  <b>Problem Details:</b>
                </div>
                <div class="col-sm-9">
                  <%= problem.details %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>

    <div class="row well">
      <div class="col-sm-12">
        <% @prescription.prescribed_medicines.each do |pm| %>
            <div class="row mt20">
              <div class="col-sm-3">
                <b>Medicine Name:</b>
              </div>
              <div class="col-sm-3">
                <%= pm.name %>
              </div>
              <div class="col-sm-3">
                <b>Strength:</b>
              </div>
              <div class="col-sm-3 ">
                <%= pm.strength %>
              </div>
            </div>
            <div class="row mt20">
              <div class="col-sm-3">
                <b>Dosage (per day):</b>
              </div>
              <div class="col-sm-3">
                <%= pm.dosage %>
              </div>
              <div class="col-sm-3">
                <b>Duration (days):</b>
              </div>
              <div class="col-sm-3">
                <%= pm.duration %>
              </div>
            </div>
            <div class="row mt20">
              <div class="col-sm-3">
                <b>Note:</b>
              </div>
              <div class="col-sm-9">
                <%= pm.note %>
              </div>
            </div>
        <% end %>
      </div>
    </div>

    <div class="row well mt20">
      <% @prescription.medical_tests.each do |mt| %>
          <div class="col-sm-3"><b>Test Name:</b></div>
          <div class="col-sm-9">
            <%= mt.name %>
          </div>
      <% end %>
    </div>
  </div>
</div>
