<%= simple_form_for(@problem) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%#= f.input :details, as: :text %>
    <%= f.fields_for :known_problems do |ff| %>
        <%= ff.input :details %>
    <% end %>
  </div>

  <div class="form-actions">
    <div class="btn-cancel">
      <%= link_to patients_records_path(id: current_user.id), :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-remove"></span>
          Cancel
      <% end %>
    </div>

    <%= f.button :button do %>
        <span class="glyphicon glyphicon-ok"></span>
        Save
    <% end %>
  </div>
<% end %>
