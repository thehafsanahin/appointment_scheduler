<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Date</th>
      <th>Start time</th>
      <th>Patient Name</th>
      <th>Reason</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%= content_tag_for(:tr, appointments) do |appointment| %>
        <td><%= appointment.date %></td>
        <td><%= TimeSlot.humanize_time(appointment.start_time) %></td>
        <td><%= appointment.patient.full_name %></td>
        <td><%= appointment.reason %></td>
        <td><%= link_to 'View History', patients_public_profile_path(id: appointment.patient.id) %></td>
        <td><%= link_to 'Start', new_prescription_path(appointment_id: appointment.id) %></td>
        <td><%= link_to 'Cancel', update_status_appointment_path(id: appointment.id, status: 'rejected'), method: :post %></td>
    <% end %>
    </tbody>
  </table>
</div>