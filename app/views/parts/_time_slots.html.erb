<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Day</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Patient count</th>
      <th>Duration</th>
      <!--<th></th>-->
    </tr>
    </thead>
    <tbody>
    <%= content_tag_for(:tr, @time_slots) do |time_slot| %>
        <td><%= time_slot.day %></td>
        <td><%= TimeSlot.humanize_time(time_slot.start_time) %></td>
        <td><%= TimeSlot.humanize_time(time_slot.end_time) %></td>
        <td><%= time_slot.patient_count %></td>
        <td><%= (time_slot.duration / 60) %> Minutes</td>
        <!--<td><%#= link_to 'Destroy', time_slot, method: :delete, data: {confirm: 'Are you sure?'} %></td>-->
    <% end %>
    </tbody>
  </table>
</div>
