<div class="page-header">
  <%= link_to precautions_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_precaution_path(@precaution), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
