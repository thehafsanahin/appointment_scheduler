<div class="page-header">
  <%= link_to new_side_effect_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Side effect
  <% end %>
  <h1>Listing side_effects</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @side_effects) do |side_effect| %>
            <td><%= side_effect.name %></td>
            <td><%= side_effect.description %></td>
            <td><%= link_to 'Show', side_effect %></td>
        <td><%= link_to 'Edit', edit_side_effect_path(side_effect) %></td>
        <td><%= link_to 'Destroy', side_effect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
