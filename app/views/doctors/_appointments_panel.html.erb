<div class="panel panel-default appointments">
  <div class="panel-heading">
    <h3 class="panel-title">
      <div class="btn-group btn-group-justified">
        <div class="btn-group">
          <button type="button" class="btn btn-default">Today's Schedule</button>
        </div>
      </div>
    </h3>
  </div>
  <div class="panel-body appointments-list">
    <% if todays_appointments.present? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Start Time</th>
              <th>Patient</th>
            </tr>
            </thead>
            <tbody>
            <% todays_appointments.each do |appointment| %>
                <tr>
                  <td><%= appointment.start_time.strftime('%H:%M') %></td>
                  <td><%= link_to appointment.patient.full_name, patients_public_profile_path(id: appointment.patient.id) %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
    <% else %>
        <i>No appointments today</i>
    <% end %>
  </div>
</div>