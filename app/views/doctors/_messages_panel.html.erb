<div class="panel panel-default messages">
  <div class="panel-heading">
    <h3 class="panel-title">Messages</h3>
  </div>
  <div class="panel-body messages-list">
    <% if @initiated_appointments.present? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Date</th>
              <th>From</th>
              <th>Subject</th>
            </tr>
            </thead>
            <tbody>
            <%= render partial: 'message', collection: @initiated_appointments %>
            </tbody>
          </table>
        </div>
    <% else %>
        <i>You do no have any appointment request pending, Awesome!</i>
    <% end %>
  </div>
</div>