<div class="row">
  <div class="col-md-12">
    <div class="col-md-offset-3 col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            Doctor Sign up
          </h3>
        </div>
        <div class="panel-body">
          <%= simple_form_for([resource, resource.with_doctor_profile], as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <%= render partial: 'parts/common_sign_up_fields', locals: {f: f} %>
              <%= f.fields_for :doctor_profile do |p| %>
                  <%= render partial: 'doctor_sign_up_fields', locals: {f: p} %>
              <% end %>
              <div><%= f.button :submit, 'Sign up' %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
