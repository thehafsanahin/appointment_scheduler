<div class="panel panel-default messages">
  <div class="panel-heading">
    <h3 class="panel-title">All Appointments</h3>
  </div>
  <div class="panel-body messages-list">
    <% if all_appointments.present? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Date</th>
              <th>Doctor</th>
              <th>Status</th>
            </tr>
            </thead>
            <tbody>
            <% all_appointments.each do |appointment| %>
                <tr>
                  <td><%= humanize_date(appointment.date) %></td>
                  <td><%= "Dr. #{appointment.doctor.full_name}" %></td>
                  <td><%= status_with_icon(appointment) %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
    <% else %>
        <i>You haven't requested for any appointment yet!</i>
    <% end %>
  </div>
</div>