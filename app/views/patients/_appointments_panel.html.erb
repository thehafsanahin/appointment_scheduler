<div class="panel panel-default appointments">
  <div class="panel-heading">
    <h3 class="panel-title">
      <div class="btn-group btn-group-justified">
        <div class="btn-group">
          <button type="button" class="btn btn-default">Upcoming Appointments</button>
        </div>
      </div>
    </h3>
  </div>
  <div class="panel-body appointments-list">
    <% if appointments.present? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Date</th>
              <th>Doctor</th>
            </tr>
            </thead>
            <tbody>
            <% appointments.each do |appointment| %>
                <tr>
                  <td><%= appointment.date %></td>
                  <td><%= link_to appointment.doctor.full_name, user_path(appointment.doctor.id) %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
    <% else %>
      <p>You have no upcoming appointments!</p>
    <% end %>
  </div>
</div>