<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Your Doctors</h3>
  </div>
  <div class="panel-body">
      <div class="table-responsive">
        <% if doctors.present? %>
            <table class="table table-hover">
              <thead>
              <tr>
                <th>Name</th>
                <th>Specialty</th>
              </tr>
              </thead>
              <tbody>
              <% doctors.each do |doctor| %>
                  <tr>
                    <td><%= link_to "Dr. #{doctor.full_name}", user_path(doctor.id) %></td>
                    <td><%= doctor.specialty %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
        <% end %>
      </div>
  </div>
</div>